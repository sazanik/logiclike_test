{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": { 
      "@/*": ["src/*"],
    },
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "ios/",
    "android/",
    "./dist",
    "metro.config.js",
    "**/*.android.js",
    "**/*.ios.js"
  ]
}
